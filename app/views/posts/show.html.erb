<p id="notice"><%= notice %></p>

<h1><%= @post.title %></h1>

<p>
  <%= @post.text %>
</p>

<p>
  <strong>User:</strong>
  <%= @post.user.email %>
</p>

<p>
	<i><%= time_ago_in_words @post.created_at %> ago</i>
</p>

<h2>Comments</h2>
<% @post.comments.each do |comment| %>
        <p><%=comment.text %></p>
        <p><i><%= time_ago_in_words comment.created_at %> ago </i></p>
        <p><%= link_to "Delete comment", [comment.post, comment], method: :delete, data: { confirm: 'Are you sure?' }  %></p>
<% end %>

<%= form_for [@post, @post.comments.build] do |f| %>
<p><%= f.text_area :text, :size => '40x10'%></p>
<p><%= f.submit "Comment" %></p>
<% end %>

<p>
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %> |
<%= link_to 'Delete', @post, :method => :delete, :confirm => "Are you sure you want to delete this post?" %>
</p> 